<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow (bottom-right) -->
    <item
        android:left="4dp"
        android:top="4dp">
        <shape android:shape="rectangle">
            <corners android:radius="16dp"/>
            <solid android:color="#DADADA"/>
        </shape>
    </item>

    <!-- Highlight (top-left) -->
    <item
        android:right="4dp"
        android:bottom="4dp">
        <shape android:shape="rectangle">
            <corners android:radius="16dp"/>
            <solid android:color="#FFFFFF"/>
        </shape>
    </item>

    <!-- Main surface -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="16dp"/>
            <gradient
                android:startColor="#2E35A15D"
                android:endColor="#FFFFFF"
                android:angle="270"/>
        </shape>
    </item>

</layer-list>
